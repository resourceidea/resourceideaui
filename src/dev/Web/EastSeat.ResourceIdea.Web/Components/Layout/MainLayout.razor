@* ----------------------------------------------------------------------------------
    File: MainLayout.razor
    Path: src/Web/EastSeat.ResourceIdea.Web/Components/Layout/MainLayout.razor
    Description: Main layout for the app with sidebar navigation.
   ---------------------------------------------------------------------------------- *@

@inherits LayoutComponentBase

@inject NotificationService NotificationService

<div class="app-layout">
    <!-- Sidebar Navigation -->
    <div style="position: fixed; top: 0; left: 0; width: 280px; height: 100vh; background-color: #00879c; color: white; padding: 20px; z-index: 1000; overflow-y: auto;">
        <h3 style="margin: 0 0 20px 0;">RSM Uganda</h3>
        <input type="text" placeholder="Search" style="width: 100%; padding: 8px; margin: 10px 0; border: none; border-radius: 4px;" />
        <div style="margin-bottom: 20px;">
            <h4 style="margin: 0 0 10px 0;">Views</h4>
            <div style="margin-left: 10px;">
                <a href="#" style="display: block; color: white; padding: 5px 0; text-decoration: none;">📅 Resources Timeline</a>
                <a href="#" style="display: block; color: white; padding: 5px 0; text-decoration: none;">📊 Service Lines Timeline</a>
                <a href="#" style="display: block; color: white; padding: 5px 0; text-decoration: none;">👥 Job Managers Timeline</a>
            </div>
        </div>
        <div>
            <h4 style="margin: 0 0 10px 0;">Control Panel</h4>
            <div style="margin-left: 10px;">
                <a href="/employees" style="display: block; color: white; padding: 5px 0; text-decoration: none;">📁 Resources</a>
                <a href="/clients" style="display: block; color: white; padding: 5px 0; text-decoration: none;">👥 Clients</a>
                <a href="#" style="display: block; color: white; padding: 5px 0; text-decoration: none;">📊 Lines of Service</a>
                <a href="/jobpositions" style="display: block; color: white; padding: 5px 0; text-decoration: none;">👤 Job Positions</a>
                <a href="/departments" style="display: block; color: white; padding: 5px 0; text-decoration: none;">🏢 Departments</a>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Top Header with User Profile -->
        <header class="top-header">
            <div class="header-content">
                <div class="header-spacer"></div>
                <div class="user-profile-dropdown">
                    <button class="user-profile-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-user-circle"></i>
                        <i class="fa-solid fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user"></i> Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-cog"></i> Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="page-content">
            @Body
        </main>

        <!-- Footer -->
        <footer class="app-footer">
            <div class="footer-content">
                <span class="copyright">&copy; @DateTime.Now.Year EastSeat</span>
            </div>
        </footer>
    </div>
</div>