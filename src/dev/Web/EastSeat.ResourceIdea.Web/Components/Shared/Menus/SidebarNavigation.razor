@* ----------------------------------------------------------------------------------
    File: SidebarNavigation.razor
    Path: src/Web/EastSeat.ResourceIdea.Web/Components/Shared/Menus/SidebarNavigation.razor
    Description: Sidebar navigation component matching Figma design
   ---------------------------------------------------------------------------------- *@

<div class="sidebar-navigation">
    <!-- Brand Header -->
    <div class="sidebar-header">
        <div class="brand-section">
            <div class="brand-logo">
                <i class="fa-solid fa-circle" style="color: #fff; font-size: 0.8rem;"></i>
            </div>
            <span class="brand-text">RSM Uganda</span>
        </div>
        <button class="sidebar-toggle" type="button">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>

    <!-- Search Bar -->
    <div class="sidebar-search">
        <div class="search-wrapper">
            <i class="fa-solid fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search" />
        </div>
    </div>

    <!-- Navigation Sections -->
    <div class="sidebar-content">
        <!-- Views Section -->
        <div class="nav-section">
            <button class="section-header @(viewsExpanded ? "expanded" : "")" @onclick="ToggleViews">
                <span class="section-title">Views</span>
                <i class="fa-solid fa-chevron-right section-arrow"></i>
            </button>
            <div class="section-content @(viewsExpanded ? "show" : "")">
                <NavLink class="nav-item" href="#" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-calendar-days nav-icon"></i>
                    <span class="nav-text">Resources Timeline</span>
                </NavLink>
                <NavLink class="nav-item" href="#" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-chart-line nav-icon"></i>
                    <span class="nav-text">Service Lines Timeline</span>
                </NavLink>
                <NavLink class="nav-item" href="#" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-users nav-icon"></i>
                    <span class="nav-text">Job Managers Timeline</span>
                </NavLink>
            </div>
        </div>

        <!-- Control Panel Section -->
        <div class="nav-section">
            <button class="section-header @(controlPanelExpanded ? "expanded" : "")" @onclick="ToggleControlPanel">
                <span class="section-title">Control Panel</span>
                <i class="fa-solid fa-chevron-right section-arrow"></i>
            </button>
            <div class="section-content @(controlPanelExpanded ? "show" : "")">
                <NavLink class="nav-item" href="/employees" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-folder nav-icon"></i>
                    <span class="nav-text">Resources</span>
                </NavLink>
                <NavLink class="nav-item" href="/clients" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-users nav-icon"></i>
                    <span class="nav-text">Clients</span>
                </NavLink>
                <NavLink class="nav-item" href="#" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-chart-bar nav-icon"></i>
                    <span class="nav-text">Lines of Service</span>
                </NavLink>
                <NavLink class="nav-item" href="/jobpositions" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-user nav-icon"></i>
                    <span class="nav-text">Job Positions</span>
                </NavLink>
                <NavLink class="nav-item" href="/departments" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-building nav-icon"></i>
                    <span class="nav-text">Departments</span>
                </NavLink>
            </div>
        </div>
    </div>
</div>

@code {
    private bool viewsExpanded = true;
    private bool controlPanelExpanded = true;

    private void ToggleViews()
    {
        viewsExpanded = !viewsExpanded;
    }

    private void ToggleControlPanel()
    {
        controlPanelExpanded = !controlPanelExpanded;
    }
}