@* ------------------------------------------------------------------------------
    File: ClientDetails.razor
    Path: src/dev/Web/EastSeat.ResourceIdea.Web/Components/Pages/Clients/ClientDetails.razor
    Description: Client Detail Page
   ------------------------------------------------------------------------------ *@

@page "/clients/{Id:guid}"

<ResourceIdeaPageTitle Title="Client Details" />

<div class="page-container">

    @if (IsLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (HasError)
    {
        <DismissibleAlert ErrorMessage="@ErrorMessage" IsErrorMessage="true" />
    }
    else if (Client != null)
    {
        <div class="card text-bg-info mt-1 mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@Client.Name</h3>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <NavLink class="btn btn-outline-dark btn-sm" href="/clients" ActiveClass="">
                <i class="fa fa-chevron-left"></i> Back to Clients
            </NavLink>
            <NavLink class="btn btn-primary btn-sm ms-2" href=@($"/clients/edit/{Client.ClientId.Value}") ActiveClass="">
                <i class="fa-solid fa-pen-to-square"></i> Edit
            </NavLink>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">Related Information</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2 d-md-flex">
                    <NavLink class="btn btn-outline-secondary btn-sm" href="#">
                        <i class="fa-solid fa-briefcase"></i> Projects
                    </NavLink>
                    <NavLink class="btn btn-outline-secondary btn-sm" href="#">
                        <i class="fa-solid fa-file-invoice"></i> Invoices
                    </NavLink>
                    <NavLink class="btn btn-outline-secondary btn-sm" href="#">
                        <i class="fa-solid fa-address-card"></i> Contacts
                    </NavLink>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-9">
                                <div><span class="fw-bold">Building:</span> @Client.Address.Building</div>
                                <div><span class="fw-bold">Street:</span> @Client.Address.Street</div>
                                <div><span class="fw-bold">City:</span> @Client.Address.City</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-8">
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">Engagements</h6>
                    </div>
                    <div class="card-body"></div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Client not found.
        </div>
    }
</div>