@page "/clients"
@page "/clients/index"
@inherits ResourceIdeaComponentBase

<ResourceIdeaPageTitle Title="Clients" />

<div class="page-container">
    <PageHeader Text="Clients" />

    <NavLink class="btn btn-outline-dark btn-sm mt-2 mb-2" href="/clients/add" ActiveClass="">
        <i class="fa-solid fa-user-tie"></i> Add Client
    </NavLink>

    <div class="content-container">
        @if (IsLoading)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (HasError)
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }
        else
        {
            <TenantClientsList PagedClientsList="@TenantClients" OnClientsPageChange="HandlePageChangeAsync" />
        }
    </div>
</div>
