@page "/clients"
@page "/clients/index"

<div class="page-container">
    <PageHeader Text="Clients" />

    <NavLink class="btn btn-outline-dark btn-sm mt-2 mb-2" href="/clients/add" ActiveClass="">
        <i class="fa-solid fa-user-plus"></i> Add Client
    </NavLink>

    <div class="content-container">
        @if (IsLoadingPage)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <TenantClientsList
                PagedClientsList="@TenantClients"
                OnClientsPageChange="HandlePageChangeAsync" />
        }
    </div>
</div>
