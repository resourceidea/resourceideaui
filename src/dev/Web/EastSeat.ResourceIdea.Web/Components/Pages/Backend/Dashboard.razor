    .backend-dashboard {
        padding: 20px;
    }

    .dashboard-header {
        margin-bottom: 30px;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 20px;
    }

    .dashboard-header h1 {
        color: #2c3e50;
