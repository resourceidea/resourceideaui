@page "/access-denied"
@layout PublicLayout
@attribute [AllowAnonymous]

<PageTitle>Access Denied - ResourceIdea</PageTitle>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="fas fa-lock"></i>
        </div>
        <h1 class="access-denied-title">Access Denied</h1>
        <p class="access-denied-message">
            You don't have permission to access this resource. Please contact your administrator if you believe this is
            an error.
        </p>
        <div class="access-denied-actions">
            <a href="/login" class="btn btn-primary">Sign In</a>
            <a href="/" class="btn btn-outline-secondary">Go Home</a>
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #00879c 0%, #006b7d 100%);
        padding: 20px;
    }

    .access-denied-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        padding: 40px;
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .access-denied-icon {
        color: #dc3545;
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .access-denied-title {
        color: #495057;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .access-denied-message {
        color: #6c757d;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .access-denied-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.15s ease-in-out;
    }

    .btn-primary {
        background-color: #00879c;
        border-color: #00879c;
        color: white;
    }

    .btn-primary:hover {
        background-color: #006b7d;
        border-color: #006b7d;
        transform: translateY(-1px);
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
        background: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
        transform: translateY(-1px);
    }
</style>

           