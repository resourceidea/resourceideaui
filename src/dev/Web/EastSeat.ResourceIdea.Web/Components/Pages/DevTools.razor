@page "/dev-tools"
@using Microsoft.AspNetCore.Authorization
@using EastSeat.ResourceIdea.Web.Components.Base
@inherits ResourceIdeaComponentBase

<PageTitle>Development Tools - Moved</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <h3>Development Tools Moved</h3>
                        <p class="text-muted">This page has been moved to a secure location requiring proper authorization.</p>
                    </div>
                    
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        Development tools are now protected and available only to authorized users with backend access.
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="/backend/dev-tools" class="btn btn-primary">
                            <i class="fas fa-tools me-2"></i>
                            Access Backend Development Tools
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>
                            Return to Home
                        </a>
                    </div>
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>
                            Backend access requires Developer or Support role authorization
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
