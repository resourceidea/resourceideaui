@page "/"
@attribute [AllowAnonymous]
@layout PublicLayout

<PageTitle>ResourceIdea - Employee & Resource Management</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="hero-title">Welcome to <span class="brand-highlight">ResourceIdea</span></h1>
                        <p class="hero-subtitle">
                            Streamline your organization with comprehensive employee management,
                            client relationship tools, and resource planning capabilities.
                        </p>
                        <div class="hero-actions">
                            <a href="/login" class="btn btn-primary btn-lg">Get Started</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <i class="fas fa-users-cog"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="section-title">Key Features</h2>
                    <p class="section-subtitle">Everything you need to manage your resources effectively</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="feature-title">Employee Management</h3>
                        <p class="feature-description">
                            Manage your workforce with comprehensive employee profiles,
                            department organization, and role assignments.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <h3 class="feature-title">Client Management</h3>
                        <p class="feature-description">
                            Keep track of your clients, manage engagements,
                            and organize work items for better project delivery.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3 class="feature-title">Resource Planner</h3>
                        <p class="feature-description">
                            Plan and allocate resources efficiently with timeline views
                            and service line management capabilities.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="cta-title">Ready to Get Started?</h2>
                    <p class="cta-description">
                        Sign in to access your dashboard and start managing your resources today.
                    </p>
                    <a href="/login" class="btn btn-light btn-lg">Sign In Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .home-container {
        background: white;
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, #00879c 0%, #006b7d 100%);
        color: white;
        padding: 100px 0;
        min-height: 70vh;
        display: flex;
        align-items: center;
    }

    .hero-content {
        padding: 20px 0;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .brand-highlight {
        color: #ffff99;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        margin-bottom: 30px;
        line-height: 1.6;
        opacity: 0.9;
    }

    .hero-actions {
        margin-top: 30px;
    }

    .hero-image {
        text-align: center;
        font-size: 12rem;
        color: rgba(255, 255, 255, 0.1);
    }

    .features-section {
        padding: 100px 0;
        background: #f8f9fa;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #00879c;
        margin-bottom: 15px;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 0;
    }

    .feature-card {
        background: white;
        border-radius: 12px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .feature-icon {
        color: #00879c;
        font-size: 3.5rem;
        margin-bottom: 25px;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 20px;
    }

    .feature-description {
        color: #6c757d;
        line-height: 1.6;
    }

    .cta-section {
        background: #00879c;
        color: white;
        padding: 80px 0;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .cta-description {
        font-size: 1.2rem;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .btn {
        border-radius: 8px;
        padding: 15px 30px;
        font-size: 1.1rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #ffff99;
        border-color: #ffff99;
        color: #00879c;
    }

    .btn-primary:hover {
        background-color: #ffff66;
        border-color: #ffff66;
        transform: translateY(-2px);
    }

    .btn-light {
        background-color: white;
        border-color: white;
        color: #00879c;
    }

    .btn-light:hover {
        background-color: #f8f9fa;
        border-color: #f8f9fa;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .hero-image {
            font-size: 8rem;
            margin-top: 40px;
        }

        .section-title {
            font-size: 2rem;
        }

        .cta-title {
            font-size: 2rem;
        }
    }
</style>
