@page "/Error"
@using System.Diagnostics

<PageTitle>Error - ResourceIdea</PageTitle>

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="error-title">Oops! Something went wrong</h1>
        <p class="error-message">
            We encountered an unexpected error while processing your request. Our team has been notified and is working to resolve this issue.
        </p>
        
        @if (ShowRequestId)
        {
            <div class="error-details">
                <div class="detail-item">
                    <strong>Request ID:</strong> <code class="request-id">@RequestId</code>
                </div>
                <p class="detail-note">Please include this ID when contacting support.</p>
            </div>
        }

        <div class="error-actions">
            <a href="javascript:history.back()" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home"></i> Home
            </a>
        </div>

        @* Development environment information *@
        @if (IsevelopmentMode)
        {
            <div class="development-info">
                <div class="dev-header">
                    <i class="fas fa-code"></i>
                    <span>Development Mode</span>
                </div>
                <p class="dev-description">
                    You are running in Development mode. This section provides additional debugging information.
                </p>
                <div class="dev-warning">
                    <i class="fas fa-shield-alt"></i>
                    <strong>Security Notice:</strong> The Development environment should not be enabled for deployed applications 
                    as it may display sensitive information to end users.
                </div>
                <div class="dev-instructions">
                    <strong>Environment Configuration:</strong> Set <code>ASPNETCORE_ENVIRONMENT=Development</code> for local debugging.
                </div>
            </div>
        }
    </div>
</div>

<style>
    .error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #00879c 0%, #006b7d 100%);
        padding: 20px;
    }

    .error-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        padding: 40px;
        text-align: center;
        max-width: 600px;
        width: 100%;
    }

    .error-icon {
        color: #ffc107;
        font-size: 4rem;
        margin-bottom: 25px;
    }

    .error-title {
        color: #495057;
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .error-message {
        color: #6c757d;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .error-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
    }

    .detail-item {
        margin-bottom: 10px;
    }

    .request-id {
        background: #e9ecef;
        padding: 4px 8px;
        border-radius: 4px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: #495057;
    }

    .detail-note {
        color: #6c757d;
        font-size: 0.9rem;
        margin: 10px 0 0 0;
        font-style: italic;
    }

    .error-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .btn {
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.15s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background-color: #00879c;
        border-color: #00879c;
        color: white;
    }

    .btn-primary:hover {
        background-color: #006b7d;
        border-color: #006b7d;
        transform: translateY(-1px);
        color: white;
        text-decoration: none;
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
        background: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
        transform: translateY(-1px);
        text-decoration: none;
    }

    .development-info {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 20px;
        text-align: left;
        margin-top: 20px;
    }

    .dev-header {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        color: #856404;
        margin-bottom: 15px;
        font-size: 1.1rem;
    }

    .dev-description {
        color: #856404;
        margin-bottom: 15px;
        line-height: 1.5;
    }

    .dev-warning {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 6px;
        padding: 15px;
        color: #721c24;
        margin-bottom: 15px;
        display: flex;
        align-items: flex-start;
        gap: 10px;
    }

    .dev-warning i {
        margin-top: 2px;
        flex-shrink: 0;
    }

    .dev-instructions {
        background: #d1ecf1;
        border: 1px solid #bee5eb;
        border-radius: 6px;
        padding: 15px;
        color: #0c5460;
    }

    .dev-instructions code {
        background: #b3d4fc;
        padding: 2px 6px;
        border-radius: 3px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .error-card {
            padding: 30px 20px;
        }

        .error-title {
            font-size: 1.8rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 200px;
            justify-content: center;
        }
    }
</style>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);
    private bool IsevelopmentMode => Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development";

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
