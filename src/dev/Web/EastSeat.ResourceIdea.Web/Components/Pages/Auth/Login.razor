@page "/login"
@using EastSeat.ResourceIdea.Domain.Users.Models
@using EastSeat.ResourceIdea.Web.Components.Layout
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Authorization
@layout AuthLayout
@inherits EastSeat.ResourceIdea.Web.Components.Base.ResourceIdeaComponentBase
@attribute [AllowAnonymous]
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Login</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card mt-5">
                <div class="card-header">
                    <h4 class="text-center">Login</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="loginModel" OnValidSubmit="HandleLoginWithLoadingState"
                        OnInvalidSubmit="HandleInvalidSubmit" FormName="LoginForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        @if (!string.IsNullOrEmpty(GetDisplayErrorMessage()))
                        {
                            <div class="alert alert-danger">@GetDisplayErrorMessage()</div>
                        }

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" class="form-control" @bind-Value="loginModel.Email" />
                            <ValidationMessage For="() => loginModel.Email" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <InputText type="password" id="password" class="form-control"
                                @bind-Value="loginModel.Password" />
                            <ValidationMessage For="() => loginModel.Password" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@IsLoading">
                                @if (IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Login
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>