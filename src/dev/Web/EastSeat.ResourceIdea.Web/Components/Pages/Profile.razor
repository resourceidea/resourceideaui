@page "/profile"
@inherits ResourceIdeaComponentBase

@using EastSeat.ResourceIdea.Application.Features.Employees.Queries
@using EastSeat.ResourceIdea.Application.Features.Employees.Commands
@using EastSeat.ResourceIdea.Domain.Employees.Models
@using EastSeat.ResourceIdea.Web.Components.Base

@layout MainLayout

<ResourceIdeaPageTitle Title="My Profile" />

<PageHeader Text="My Profile" />

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(isErrorMessage ? "alert-danger" : "alert-success") alert-dismissible fade show mt-3" role="alert">
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage" aria-label="Close"></button>
    </div>
}

@if (IsLoadingPage)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (CurrentEmployee != null && !CurrentEmployee.IsEmpty)
{
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Personal Information</h5>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">First Name</label>
                        <div class="form-control-plaintext">@CurrentEmployee.FirstName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Last Name</label>
                        <div class="form-control-plaintext">@CurrentEmployee.LastName</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <div class="form-control-plaintext">@CurrentEmployee.Email</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Employee Number</label>
                        <div class="form-control-plaintext">@CurrentEmployee.EmployeeNumber</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Department</label>
                        <div class="form-control-plaintext">@CurrentEmployee.DepartmentName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Job Position</label>
                        <div class="form-control-plaintext">@CurrentEmployee.JobPositionTitle</div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ManagerName))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Manager</label>
                            <div class="form-control-plaintext">@ManagerName</div>
                        </div>
                    </div>
                </div>
            }

            <hr />

            <h5 class="card-title">Account Actions</h5>
            <div class="mt-3">
                <button type="button" class="btn btn-warning" @onclick="ResetPassword" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <text>Resetting...</text>
                    }
                    else
                    {
                        <i class="fas fa-key"></i>
                        <text>Reset My Password</text>
                    }
                </button>
                <small class="form-text text-muted d-block mt-1">
                    This will generate a temporary password that you must change on your next login.
                </small>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Profile Not Found</h4>
        <p>We couldn't load your profile information. This may be because:</p>
        <ul>
            <li>Your employee record is not properly configured</li>
            <li>You don't have the necessary permissions</li>
            <li>There's a temporary system issue</li>
        </ul>
        <hr>
        <p class="mb-0">Please contact your administrator if this problem persists.</p>
    </div>
}