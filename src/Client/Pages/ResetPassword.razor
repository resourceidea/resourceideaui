@page "/reset-password"
@inject AuthService Auth
@inject NavigationManager Nav

<div class="card shadow-sm p-4 mx-auto" style="max-width: 400px;">
    <h5 class="mb-3">Reset Password</h5>
    <EditForm Model="_model" OnValidSubmit="SubmitAsync">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <InputText id="email" class="form-control" @bind-Value="_model.Email" required />
        </div>
        <div class="mb-3">
            <label for="token" class="form-label">Token</label>
            <InputText id="token" class="form-control" @bind-Value="_model.Token" required />
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <InputText id="newPassword" type="password" class="form-control" @bind-Value="_model.NewPassword"
                required />
        </div>
        <button type="submit" class="btn btn-primary w-100" disabled="@_busy">Reset</button>
        @if (_busy)
        {
            <div class="progress mt-2" style="height:4px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:100%"></div>
            </div>
        }
    </EditForm>
    @if (!string.IsNullOrEmpty(_error))
    {
        <div class="alert alert-danger mt-3 p-2">@_error</div>
    }
</div>

@code {
    private ResetPasswordRequest _model = new();
    private bool _busy;
    private string? _error;

    private async Task SubmitAsync()
    {
        _busy = true;
        _error = null;
        var ok = await Auth.ResetPasswordAsync(_model);
        if (ok)
        {
            Nav.NavigateTo("/login");
        }
        else
        {
            _error = "Reset failed";
        }
        _busy = false;
    }
}