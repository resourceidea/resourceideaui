@page "/forgot-password"
@inject AuthService Auth

<div class="card shadow-sm p-4 mx-auto" style="max-width: 400px;">
    <h5 class="mb-3">Forgot Password</h5>
    <EditForm Model="_model" OnValidSubmit="SubmitAsync">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <InputText id="email" class="form-control" @bind-Value="_model.Email" required />
        </div>
        <button type="submit" class="btn btn-primary w-100" disabled="@_busy">Submit</button>
        @if (_busy)
        {
            <div class="progress mt-2" style="height:4px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:100%"></div>
            </div>
        }
    </EditForm>
    @if (_done)
    {
        <div class="alert alert-success mt-3 p-2">Token generated (check server logs).</div>
    }
</div>

@code {
    private ForgotPasswordRequest _model = new();
    private bool _busy;
    private bool _done;

    private async Task SubmitAsync()
    {
        _busy = true;
        _done = false;
        var ok = await Auth.ForgotPasswordAsync(_model);
        _done = ok;
        _busy = false;
    }
}