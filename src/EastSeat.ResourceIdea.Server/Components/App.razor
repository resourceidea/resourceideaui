@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor

<!-- HeadOutlet enables dynamic <head> updates; we inject MudBlazor CSS explicitly since we have no _Host.cshtml. -->
<HeadOutlet />
<HeadContent>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</HeadContent>

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudText Typo="Typo.h5">Sorry, there's nothing at this address.</MudText>
        </LayoutView>
    </NotFound>
</Router>

<!-- MudBlazor JavaScript (needed for some interactive components). Placed at end for performance. -->
<script src="_content/MudBlazor/MudBlazor.min.js"></script>